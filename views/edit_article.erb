<div class="new-recipe">
  <h1>Edit <%= @article.title %></h1>
  <div class="edit-content">
    <form action="/articles/<%= @article.id %>" method="POST">
      <input type="hidden" name="_method" value="patch">

      <label for="title">Title:</label>
      <br>
      <input type="text" name="title" value="<%= @article.title %>" id="title">
      <br>
      <label for="ingredients">Ingredients: (markdown enabled)</label>
      <br>
      <input type="text" name="ingredients" value="<%= @article.ingredients %>" id="ingredients">
      <br>
      <label for="directions">Directions: (markdown enabled)</label>
      <br>
      <input type="text" name="directions" value="<%= @article.directions %>" id="directions">
      <br>
      <label for="img_url">Photo URL:</label>
      <br>
      <input type="text" name="img_url" value="<%= @article.img_url %>" id="img_url">
      <br>
      <button>Update Recipe</button>
    </form>
  </div>
</div>
<div class="footer">
  <a href="/">Home</a>
  <a href="/articles">Recipes</a>
  <a href="/users">Chefs</a>
  <a href="/categories">Tags</a>
</div>


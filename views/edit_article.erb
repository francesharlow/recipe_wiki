<h1>Edit <%= @article.title %></h1>
<div class="edit-content">
  <form action="/articles/<%= @article.id %>" method="POST">
    <input type="hidden" name="_method" value="patch">

    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @article.title %>" id="title">
    <br>
    <label for="ingredients">Ingredients:</label>
    <input type="text" name="ingredients" value="<%= @article.ingredients %>" id="ingredients">
    <br>
    <label for="directions">Directions:</label>
    <input type="text" name="directions" value="<%= @article.directions %>" id="directions">
    <br>
    <label for="img_url">Photo URL:</label>
    <input type="text" name="img_url" value="<%= @article.img_url %>" id="img_url">
    <br>
    <button>Update Recipe</button>
  </form>
</div>

